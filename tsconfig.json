{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js", "src/**/*.svelte"],
	"exclude": ["node_modules/*"],
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"useDefineForClassFields": true,
		"resolveJsonModule": true,
		"checkJs": true,
		"baseUrl": ".",
		"outDir": "./public/build",
		"sourceMap": true,
		"paths": {
			"@assets/*": ["src/assets/*"],
			"@components/*": ["src/components/*"],
			"@lib/*": ["src/lib/*"],
			"@pages/*": ["src/pages/*"],
			"@public/*": ["src/public/*"],
			"@routes/*": ["src/routes/*"],
			"@stores/*": ["src/stores/*"],
			"$types/*": ["src/types/*"],
			"@utils/*": ["src/utils/*"]
		},
		"types": ["jest", "chrome", "svelte"]
	}
}
